.userinfo{
  display:flex;
  flex-direction:column;
  align-items: center;
  background: #fff
}
.bg{
  width:100%;
  height:555rpx;
}

.avatar-position{
  position:absolute; 
  top:255rpx;
}

.my-img{
  width:120rpx;
  height:120rpx;
}

.avatar-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar-container text{
  padding-top: 10px;
}
.avatar{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  /* margin-bottom: 10rpx; */
}

.userinfo-nickname {
  color: #666;
}
.button-hover{
  border: 0;

}
.usermotto {
  background: #fff;
  padding: 15px;
  margin-bottom: 10px;
}

.usermotto .li {
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #f2f2f2;
}

.usermotto .li icon {
  margin-top: 10px;
  height: 20px;
  float: left;
  margin-right: 5px;
}

.order {
  background: #fff;
  margin: 10px 0;
  width: 100%;
  overflow: hidden;
}

.title {
  margin: 0px 15px;
  border-bottom: 1px solid #f2f2f2;
  height: 40px;
  line-height: 40px;
  display: block;
  color: #000056;
}

.canvas {
  width: 100%;
  height: 300px;
}

.order-nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 40px;
  line-height: 40px;
  background: #fff;
  border-top: 1px solid #f2f2f2;
  position: absolute;
  top: 460rpx;
}

.order-nav text {
  width: 25%;
  display: block;
  text-align: center;
  color: #666
}
button::after{
  border: 0
}
button{
  background-color:transparent;
}