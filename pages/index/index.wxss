/**index.wxss**/

.img-container {
  background: #fff;
  padding: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
  height: 400rpx;
}

.img-left {
  width: 310rpx;
  height: 400rpx;
}

.img-right {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.img-top {
  width: 400rpx;
  height: 195rpx;
}

.img-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.img-bottom image {
  width: 195rpx;
  height: 195rpx;
}

.title {
  width: 100%;
  height: 35px;
  line-height: 35px;
  text-align: center;
  margin: 15rpx 0;
  background: #fff;
  font-size: 14px;
  color: #000065;
}

.carts-icon {
  position: fixed;
  bottom:20rpx;
  right:50rpx;
  width: 64rpx;
  height:64rpx;
}

.carts-icon image{
    width: 100%;
    height: 100%;
}
.carts-icon.on{
    -webkit-animation: to_cart_scale .3s ease;
    animation: to_cart_scale .3s ease;
}
@-webkit-keyframes to_cart_scale {
    50%{
        -webkit-transform: scale(1.2);
    }
}
@keyframes to_cart_scale {
    50%{
        transform: scale(1.2);
    }
}
.carts-icon-num{
    position: absolute;
    left: 40rpx;
    top: -5rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 50%;
    background: #7f7fb2;
    color: #fff;
    text-align: center;
    font-size:24rpx;
}

.to-carts-icon{
    position: fixed;
    bottom: 20rpx;
    right: 50rpx;
    width:50rpx;
    height: 50rpx;
    opacity: .6;
    -webkit-animation: to_cart .3s ease-out;
    animation: to_cart .3s ease-out;
}

@keyframes to_cart {
    0%{
        right:50rpx;
        bottom:200rpx;
        transform: scale(4);
    }
}