/* components/list/index.wxss */

.list {
  background: #fff;
  margin-bottom: 10px;
}

.list .img {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.list .img image {
  width: 100%;
}

.list .img .icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 90px;
  height: 25px;
  line-height: 25px;
  background: #000065;
  border-radius: 0 0 0rpx 20rpx;
  color: #fff;
  text-align: center;
  opacity: 0.5;
}

.list .content {
  padding: 0 15rpx;
}

.text-content {
  border-bottom: 1rpx solid #f2f2f2;
}

.list .content .text {
  padding-top: 10rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 30px;
  display: block;
}

.time, .text-content {
  height: 30px;
  line-height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.text-content .now {
  color: red;
  font-size: 18px;
}

.text-content .old {
  color: #ccc;
  padding-left: 10px;
  text-decoration: line-through;
  font-size: 12px;
}

.time text {
  font-size: 12px;
  color: #666;
}

.buy {
  border: 1px solid red;
  border-radius: 5px;
  color: red;
  height: 25px;
  line-height: 25px;
  width: 85px;
  text-align: center;
}
